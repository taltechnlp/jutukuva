{
  "name": "jutukuva",
  "version": "0.2.0",
  "description": "Real-time caption editing application for live streaming and transcription",
  "author": {
    "name": "Jutukuva",
    "email": "jutukuva@example.com"
  },
  "private": true,
  "type": "module",
  "main": "electron/main.js",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "vite dev",
    "build": "vite build && node -e \"const fs=require('fs');const f='build/index.html';fs.writeFileSync(f,fs.readFileSync(f,'utf8').replace(/base: new URL\\(\\\"\\.\\\".*?slice\\(0, -1\\)/g,'base: \\\"\\\"'))\"",
    "preview": "vite preview",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "electron:dev": "concurrently \"npm run dev\" \"wait-on http://localhost:5173 && cross-env NODE_ENV=development electron . --no-sandbox\"",
    "electron:build": "npm run build && electron-builder",
    "rebuild": "electron-rebuild --force --module-dir . --which better-sqlite3 sherpa-onnx-node"
  },
  "devDependencies": {
    "@electron/rebuild": "^4.0.1",
    "@sveltejs/adapter-static": "^3.0.10",
    "@sveltejs/kit": "^2.48.5",
    "@sveltejs/vite-plugin-svelte": "^6.1.3",
    "@tailwindcss/vite": "^4.1.17",
    "@types/qrcode": "^1.5.6",
    "@types/uuid": "^10.0.0",
    "concurrently": "^9.0.0",
    "cross-env": "^10.1.0",
    "daisyui": "^5.5.5",
    "electron": "^33.4.11",
    "electron-builder": "^26.0.12",
    "svelte": "^5.43.10",
    "svelte-check": "^4.3.4",
    "tailwindcss": "^4.1.17",
    "typescript": "^5.5.0",
    "vite": "^7.2.2",
    "wait-on": "^9.0.3"
  },
  "dependencies": {
    "@ricky0123/vad-web": "^0.0.29",
    "@sveltejs/adapter-node": "^5.4.0",
    "better-sqlite3": "^12.4.1",
    "nanoid": "^5.1.6",
    "onnxruntime-web": "^1.23.2",
    "prosemirror-changeset": "^2.2.0",
    "prosemirror-commands": "^1.7.1",
    "prosemirror-history": "^1.5.0",
    "prosemirror-keymap": "^1.2.3",
    "prosemirror-model": "^1.25.4",
    "prosemirror-state": "^1.4.4",
    "prosemirror-transform": "^1.10.5",
    "prosemirror-utils": "^1.2.2",
    "prosemirror-view": "^1.41.3",
    "qrcode": "^1.5.4",
    "sherpa-onnx-node": "^1.12.18",
    "svelte-i18n": "^4.0.1",
    "uuid": "^11.0.6",
    "ws": "^8.18.0",
    "y-prosemirror": "^1.3.7",
    "y-websocket": "^3.0.0",
    "yjs": "^13.6.27"
  },
  "optionalDependencies": {
    "sherpa-onnx-linux-x64": "^1.12.18",
    "sherpa-onnx-linux-arm64": "^1.12.18",
    "sherpa-onnx-darwin-x64": "^1.12.18",
    "sherpa-onnx-darwin-arm64": "^1.12.18",
    "sherpa-onnx-win-x64": "^1.12.18"
  },
  "build": {
    "appId": "com.jutukuva.app",
    "productName": "Jutukuva",
    "files": [
      "build/**/*",
      "electron/**/*",
      "package.json"
    ],
    "asarUnpack": [
      "**/*.node",
      "**/sherpa-onnx-node/**"
    ],
    "directories": {
      "buildResources": "assets",
      "output": "dist"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "category": "public.app-category.productivity",
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist",
      "hardenedRuntime": true,
      "extendInfo": {
        "NSScreenCaptureUsageDescription": "This app needs to access screen recording to capture system audio from specific windows and screens.",
        "NSMicrophoneUsageDescription": "This app needs microphone access for speech recognition."
      },
      "extraResources": [
        {
          "from": "node_modules/sherpa-onnx-darwin-${arch}",
          "to": "sherpa-libs",
          "filter": ["**/*"]
        }
      ]
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icon.png",
      "extraResources": [
        {
          "from": "node_modules/sherpa-onnx-win-x64",
          "to": "sherpa-libs",
          "filter": ["**/*"]
        }
      ]
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        }
      ],
      "category": "Utility",
      "icon": "assets/icon.png",
      "extraResources": [
        {
          "from": "node_modules/sherpa-onnx-linux-x64",
          "to": "sherpa-libs",
          "filter": ["**/*"]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
