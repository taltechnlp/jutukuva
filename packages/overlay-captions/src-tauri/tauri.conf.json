{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Jutukuva Captions",
  "version": "0.4.0",
  "identifier": "ee.jutukuva.overlay-captions",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../build"
  },
  "app": {
    "withGlobalTauri": true,
    "macOSPrivateApi": true,
    "windows": [
      {
        "label": "main",
        "title": "Jutukuva Captions",
        "width": 600,
        "height": 550,
        "minWidth": 400,
        "minHeight": 400,
        "resizable": true,
        "center": true,
        "decorations": false,
        "transparent": true,
        "visible": true
      }
    ],
    "security": {
      "csp": null,
      "assetProtocol": {
        "enable": false
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": ["deb", "appimage", "dmg", "nsis"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "linux": {
      "deb": {
        "depends": []
      }
    }
  }
}
